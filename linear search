//linear search
#include<iostream>
using namespace std;
int linearsearch(int arr[], int size, int target){
    for(int i=0;i<size;i++){
        if(arr[i]==target){
            return i;
        }
    }
    return -1;
}
int main(){
    int arr[]={2,6,7,4,3,9,0};
    int target=0;
    int size=7;
    int ans=linearsearch(arr,size,target);
    cout<<ans<<endl;
}
